<Page x:Class="BioLab.UI.Elements.Header"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BioLab.UI.Elements"
      mc:Ignorable="d" 
      d:DesignHeight="60" d:DesignWidth="800"
      Title="Header">

    <StackPanel Orientation="Horizontal">
        <StackPanel.Background>
            <SolidColorBrush Color="{StaticResource AccentBackground}"/>
        </StackPanel.Background>
        <TextBlock x:Name="BackButton" Text=" &lt;&lt; " FontSize="40" Foreground="White" PreviewMouseDown="BackButton_PreviewMouseDown" >
            <TextBlock.Background>
                <SolidColorBrush Color="{StaticResource Accent}"/>
            </TextBlock.Background>
        </TextBlock>
        <Image x:Name="HeaderLogo" Source="/Resources/Images/Logo.png" Width="50" Height="50" Margin="10,5,15,5"/>
        <TextBlock FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0">BioLab ></TextBlock>
        <TextBlock x:Name="HeaderTitle" FontSize="28" VerticalAlignment="Center" Margin="0,0,20,0">Авторизация</TextBlock>
        
    </StackPanel>
</Page>
